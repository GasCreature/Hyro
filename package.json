{
  "name": "hyro",
  "description": "Lightweight real-time HTML5 editor",
  "version": "0.1.0",
  "keywords": [
    "hyro",
    "html",
    "html5",
    "editor",
    "live",
    "real-time",
    "minimalist",
    "lightweight"
  ],
  "main": "index.html",
  "window": {
    "title": "Hyro",
    "toolbar": false,
    "frame": true,
    "width": 800,
    "show": true,
    "height": 500,
    "position": "mouse",
    "min_width": 400,
    "min_height": 200
  },
  "scripts": {
      "start": "nw"
  },
  "webkit": {
    "plugin": true
  },
  "maintainers": [
    {
      "name": "Michael Brade",
      "email": "brade@kde.org"
    }
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "bugs": "https://github.com/michael-brade/Hyro/issues",
  "repository": [
    {
      "type": "git",
      "url": "git@github.com:michael-brade/Hyro.git"
    }
  ],
  "developmentMode": true,
  "dependencies": {
    "chokidar": "*",
    "grunt": "^0.4.5",
    "grunt-contrib-clean": "^0.5.0",
    "grunt-node-webkit-builder": "^0.1.21"
  }
}
